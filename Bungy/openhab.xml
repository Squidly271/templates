<?xml version="1.0" encoding="utf-8"?>
<Container>
  <Beta>False</Beta>
  <Category>HomeAutomation:</Category>
  <Name>openhab</Name>
  <Description>
    openHAB is an open source home automation solution capable of interfacing with many different controllers and "Internet of Things" devices
  </Description>
  <Overview>
    openHAB is an open source home automation solution capable of interfacing with many different controllers and "Internet of Things" devices
  </Overview>
  <Support>http://lime-technology.com/forum/index.php?topic=38930.0</Support>
  <Registry>https://registry.hub.docker.com/u/jshridha/openhab</Registry>
  <GitHub>https://github.com/jshridha/docker-openhab</GitHub>
  <Repository>jshridha/openhab</Repository>
  <BindTime>true</BindTime>
  <Privileged>false</Privileged>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>8080</HostPort>
        <ContainerPort>8080</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Environment>
  </Environment>
  <Data>
    <Volume>
      <HostDir>/mnt/cache/appdata/openhab/config</HostDir>
      <ContainerDir>/etc/openhab</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
    <Data>
    <Volume>
      <HostDir>/etc/localtime</HostDir>
      <ContainerDir>/etc/localtime</ContainerDir>
      <Mode>ro</Mode>
    </Volume>
  </Data>
  <Icon>https://raw.githubusercontent.com/jshridha/templates/master/Bungy/Icons/openhab-logo-square.png</Icon>
</Container>
